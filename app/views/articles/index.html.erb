<div class="header">
  <h1>Articles</h1>
  <h2><%= link_to 'Create a new article', new_article_path, class: 'btn' %></h2>
</div>

<div class="articles">
  <% @articles.each do |article| %>
    <div class="article">
      <h2><%=article.title%></h2>
      <div class="article-links">
      <p>
      <%= link_to article_path(article) do %>
        <i class="far fa-eye"></i>
      <% end %>
      </p>
      <p>
      <%= link_to article_path(article), method: :delete do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
      </p>
    </div>
    </div>
  <% end %>
</div>
